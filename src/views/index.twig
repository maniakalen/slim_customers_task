{% extends "layout.twig" %}

{% block table %}
    <table class="table table-striped">
        <thead class="thead-light">
        <tr>
            <th scope="col"><a href="/customers/index?order=first_name:{% if ordBy == 'first_name' and ordDir == 'asc' %}desc{% else %}asc{% endif %}">First name</a></th>
            <th scope="col"><a href="/customers/index?order=last_name:{% if ordBy == 'last_name' and ordDir == 'asc' %}desc{% else %}asc{% endif %}">Last name</a></th>
            <th scope="col"><a href="/customers/index?order=email:{% if ordBy == 'email' and ordDir == 'asc' %}desc{% else %}asc{% endif %}">Email name</a></th>
            <th scope="col"><a href="/customers/index?order=phone:{% if ordBy == 'phone' and ordDir == 'asc' %}desc{% else %}asc{% endif %}">Phone</a></th>
            <th scope="col"><a href="/customers/index?order=priority:{% if ordBy == 'priority' and ordDir == 'asc' %}desc{% else %}asc{% endif %}">Priority</a></th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in customers %}
        <tr>
            <td>{{ user.first_name }}</td>
            <td>{{ user.last_name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.phone }}</td>
            <td>{{ user.priority }}</td>
            <td><a class="btn btn-link" href="/customers/edit/{{ user.id }}">Edit</a> |
                <a class="btn btn-link" data-method="delete" onclick="return confirm('Are you sure you want to proceed with this action?');" href="/customers/delete/{{ user.id }}">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block form %}
    <a href="/customers/form" class="btn btn-link">Add new item</a>
{% endblock %}